<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.inHouseStock.inventory.InventoryConfig">

    <!--    <ImageView-->
    <!--        android:id="@+id/untie_carton_list_edit_text_background"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="0dp"-->
    <!--        android:background="@drawable/bt_selector"-->
    <!--        android:scaleType="fitXY"-->
    <!--        app:layout_constraintBottom_toBottomOf="@+id/sales_outstock_line2"-->
    <!--        app:layout_constraintHorizontal_bias="0.0"-->
    <!--        app:layout_constraintLeft_toLeftOf="parent"-->
    <!--        app:layout_constraintRight_toRightOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        />-->

    //盘点单号

    <Button
        android:id="@+id/inventory_config_post"
        android:layout_width="0dp"
        android:layout_height="0px"
        android:layout_margin="4sp"
        android:layout_marginRight="@dimen/sp_5"
        android:background="@drawable/bt_selector"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:layout_constraintEnd_toStartOf="@+id/inventory_config_detail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline_middle2"
        app:layout_constraintTop_toTopOf="@+id/guideline_horizontal"/>

    <Button
        android:layout_marginLeft="@dimen/sp_5"
        android:id="@+id/inventory_config_detail"
        android:layout_width="0dp"
        android:layout_height="0px"
        android:layout_margin="4sp"
        android:background="@drawable/bt_selector"
        android:text="已盘明细"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline14"
        app:layout_constraintTop_toTopOf="@+id/guideline_horizontal" />

    <EditText
        android:id="@+id/inventory__config_warehouse"
        android:layout_width="0dp"
        android:layout_height="@dimen/sp_27"
        android:layout_marginTop="@dimen/sp_3"
        android:background="@drawable/et_selector"
        android:gravity="left|center_vertical"
        android:hint="扫描库位"
        android:paddingLeft="@dimen/sp_7"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/sp_17"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/guideline_middle"
        app:layout_constraintRight_toLeftOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_middle"
        app:layout_constraintTop_toBottomOf="@+id/inventory__config_order" />
    //库位

    <EditText
        android:id="@+id/inventory__config_barcode"
        android:layout_width="0dp"
        android:layout_height="@dimen/sp_27"
        android:layout_marginTop="@dimen/sp_3"
        android:background="@drawable/et_selector"
        android:gravity="left|center_vertical"
        android:hint="扫描条码"
        android:paddingLeft="@dimen/sp_7"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/sp_17"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/guideline_middle"
        app:layout_constraintRight_toLeftOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_middle"
        app:layout_constraintTop_toBottomOf="@+id/inventory__config_warehousename" />

    <ListView
        android:id="@+id/inventory__config_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8sp"
        android:layout_marginTop="8sp"
        android:layout_marginRight="8sp"
        android:saveEnabled="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sales_outstock_line2"
        app:layout_constraintVertical_bias="1.0"></ListView>

    //条码

    <Spinner
        android:id="@+id/inventory__config_status"
        android:layout_width="0dp"
        android:layout_height="@dimen/sp_30"
        android:layout_marginTop="@dimen/sp_3"
        android:spinnerMode="dialog"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/guideline_middle"
        app:layout_constraintRight_toLeftOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_middle"
        app:layout_constraintTop_toBottomOf="@+id/inventory__config_barcodename"></Spinner>

    <TextView
        android:id="@+id/combine_pallet_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0.1sp"
        android:height="1sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    //质检状态

    <TextView
        android:id="@+id/inventory__config_ordername"
        android:layout_width="0dp"
        android:layout_height="@dimen/sp_27"
        android:height="1sp"
        android:gravity="left"
        android:text="盘点单号:"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_17"
        app:layout_constraintEnd_toStartOf="@+id/guideline_middle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/guideline_middle"
        app:layout_constraintRight_toLeftOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/combine_pallet_toolbar"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/inventory__config_order"
        android:layout_width="0dp"
        android:layout_height="@dimen/sp_27"
        android:height="1sp"
        android:gravity="left"
        android:text="123456789"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_17"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/guideline_middle"
        app:layout_constraintRight_toLeftOf="@+id/guideline_right"
        app:layout_constraintStart_toEndOf="@+id/inventory__config_ordername"
        app:layout_constraintTop_toBottomOf="@+id/combine_pallet_toolbar"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/inventory__config_warehousename"
        android:layout_width="0dp"
        android:layout_height="@dimen/sp_27"
        android:layout_marginTop="@dimen/sp_3"
        android:height="1sp"
        android:gravity="left"
        android:text="库位:"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_17"
        app:layout_constraintEnd_toStartOf="@+id/guideline_middle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/guideline_middle"
        app:layout_constraintRight_toLeftOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/inventory__config_ordername"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/inventory__config_barcodename"
        android:layout_width="0dp"
        android:layout_height="@dimen/sp_27"
        android:layout_marginTop="@dimen/sp_3"
        android:height="1sp"
        android:gravity="left"
        android:text="条码:"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_17"
        app:layout_constraintEnd_toStartOf="@+id/guideline_middle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/guideline_middle"
        app:layout_constraintRight_toLeftOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/inventory__config_warehousename"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/inventory__config_statusname"
        android:layout_width="0dp"
        android:layout_height="@dimen/sp_27"
        android:layout_marginTop="@dimen/sp_3"
        android:height="1sp"
        android:gravity="left"
        android:text="质检状态:"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_17"
        app:layout_constraintEnd_toStartOf="@+id/guideline_middle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/guideline_middle"
        app:layout_constraintRight_toLeftOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/inventory__config_barcodename"
        tools:layout_editor_absoluteY="0dp" />
    <TextView
        android:id="@+id/inventory__config_numname"
        android:layout_width="0dp"
        android:layout_height="@dimen/sp_27"
        android:layout_marginTop="@dimen/sp_3"
        android:height="1sp"
        android:gravity="left"
        android:text="数量:"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_17"
        app:layout_constraintEnd_toStartOf="@+id/guideline_middle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/guideline_middle"
        app:layout_constraintRight_toLeftOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/inventory__config_statusname"
        tools:layout_editor_absoluteY="0dp" />
    <TextView
        android:id="@+id/sales_outstock_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/inventory__config_num" />


    <EditText
        android:id="@+id/inventory__config_num"
        android:layout_width="0dp"
        android:layout_height="@dimen/sp_27"
        android:layout_marginTop="@dimen/sp_3"
        android:background="@drawable/et_selector"
        android:gravity="left|center_vertical"
        android:hint="请输入盘点数量"
        android:paddingLeft="@dimen/sp_7"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/sp_17"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/guideline_middle"
        app:layout_constraintRight_toLeftOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_middle"
        app:layout_constraintTop_toBottomOf="@+id/inventory__config_statusname" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="100sp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_middle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.82" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.27" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50121653" />


</androidx.constraintlayout.widget.ConstraintLayout>