<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/stock_roll_back_pallet_no_desc"
        style="@style/TextViewComminStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/stock_roll_back_pallet_no_desc"
        android:textSize="@dimen/common_text_size_first"
        app:layout_constraintBottom_toBottomOf="@+id/stock_roll_back_pallet_no"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline_v_1"
        app:layout_constraintTop_toTopOf="@+id/stock_roll_back_pallet_no" />

    <EditText
        android:id="@+id/stock_roll_back_pallet_no"
        style="@style/EditTextStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/common_layout_height_second"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:hint="@string/stock_roll_back_pallet_no_hint"
        android:selectAllOnFocus="true"
        android:textSize="@dimen/common_text_size_first"
        android:layout_marginTop="@dimen/common_margin_top_first"
        app:layout_constraintLeft_toRightOf="@+id/guideline_v_1"
        app:layout_constraintRight_toLeftOf="@+id/guideline_v_2"
        app:layout_constraintTop_toBottomOf="@+id/stock_roll_back_erp_voucher_no">

    </EditText>
    <TextView
        android:id="@+id/stock_roll_back_erp_voucher_no_desc"
        style="@style/TextViewComminStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="@string/stock_roll_back_erp_voucher_no"
        android:textSize="@dimen/common_text_size_first"
        app:layout_constraintBottom_toBottomOf="@+id/stock_roll_back_erp_voucher_no"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline_v_1"
        app:layout_constraintTop_toTopOf="@+id/stock_roll_back_erp_voucher_no" />

    <TextView
        android:id="@+id/stock_roll_back_erp_voucher_no"
        style="@style/TextViewComminStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:gravity="left"
        android:textSize="@dimen/common_text_size_first"
        app:layout_constraintLeft_toRightOf="@+id/guideline_v_1"
        app:layout_constraintRight_toLeftOf="@+id/guideline_v_2"
        app:layout_constraintTop_toBottomOf="@+id/guideline_h_1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stock_roll_back_recycle_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stock_roll_back_pallet_no"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"></androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"></androidx.constraintlayout.widget.Guideline>
</androidx.constraintlayout.widget.ConstraintLayout>