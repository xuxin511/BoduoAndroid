<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.outstock.SalesOutstock.SalesOutReview">

    <ImageView
        android:id="@+id/untie_carton_list_edit_text_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bt_selector"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/sales_outstock_line2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_height="0.1sp"
        android:layout_width="match_parent"
        android:height="1sp"
        android:id="@+id/combine_pallet_toolbar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    //司机
    <EditText
        android:id="@+id/sales_outstock_driver"
        android:layout_width="0dp"
        android:layout_height="@dimen/sp_25"
        android:layout_marginTop="2sp"
        android:textSize="@dimen/sp_17"
        android:selectAllOnFocus="true"
        android:background="@drawable/et_selector"
        android:gravity="left|center_vertical"
        android:hint="司机"
        android:paddingLeft="@dimen/sp_7"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/guideline_middle"
        app:layout_constraintRight_toLeftOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/combine_pallet_toolbar" />

    <EditText
        android:id="@+id/sales_outstock_revieworder"
        android:layout_width="0dp"
        android:layout_height="@dimen/sp_25"
        android:layout_marginTop="3sp"
        android:selectAllOnFocus="true"
        android:textSize="@dimen/sp_17"
        android:background="@drawable/et_selector"
        android:gravity="left|center_vertical"
        android:hint="单号"
        android:paddingLeft="@dimen/sp_7"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/guideline_middle"
        app:layout_constraintRight_toLeftOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/sales_outstock_driver" />
    <TextView
        android:layout_marginTop="3sp"
        android:id="@+id/out_stock_sales_reviewuserno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="收货人："
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        app:layout_constraintTop_toBottomOf="@+id/sales_outstock_revieworder"
        app:layout_constraintLeft_toRightOf="@+id/guideline_left"
        />
    //sales_outstock_order
    //收货人
    <TextView
        android:layout_marginTop="3sp"
        android:id="@+id/out_stock_sales_reviewusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="无"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@+id/sales_outstock_revieworder"
        app:layout_constraintLeft_toRightOf="@+id/combine_pallet_worker_order_text"
        />

    <TextView
        android:layout_marginTop="3sp"
        android:id="@+id/combine_pallet_worker_order_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="收货地址："
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        app:layout_constraintTop_toBottomOf="@+id/out_stock_sales_reviewusername"
        app:layout_constraintLeft_toRightOf="@+id/guideline_left"
        />
    //sales_outstock_order
    //地址
    <TextView
        android:layout_marginTop="3sp"
        android:id="@+id/sales_outstock_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="无"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@+id/out_stock_sales_reviewusername"
        app:layout_constraintLeft_toRightOf="@+id/combine_pallet_worker_order_text"
        />

    <EditText
        android:layout_marginTop="3sp"
        android:id="@+id/sales_outstock_reviewbarcode"
        android:layout_width="0dp"
        android:layout_height="@dimen/sp_25"
        android:textSize="@dimen/sp_17"
        android:selectAllOnFocus="true"
        android:background="@drawable/et_selector"
        android:gravity="left|center_vertical"
        android:hint="条码"
        android:paddingLeft="@dimen/sp_7"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/guideline_middle"
        app:layout_constraintRight_toLeftOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/sales_outstock_address" />
    //整箱数
    <TextView
        android:layout_marginTop="3sp"
        android:id="@+id/outstock_sales_boxnum_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="整箱数："
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        app:layout_constraintTop_toBottomOf="@+id/sales_outstock_reviewbarcode"
        app:layout_constraintLeft_toRightOf="@+id/guideline_left"
        />
    <TextView
        android:layout_marginTop="3sp"
        android:id="@+id/outstock_sales_boxnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        app:layout_constraintTop_toBottomOf="@+id/sales_outstock_reviewbarcode"
        app:layout_constraintLeft_toRightOf="@+id/combine_pallet_worker_order_text"
        />
    //散件数
    <TextView
        android:layout_marginTop="3sp"
        android:id="@+id/outstock_sales_shelf_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/sp_10"
        android:text="散件数："
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        app:layout_constraintTop_toBottomOf="@+id/sales_outstock_reviewbarcode"
        app:layout_constraintLeft_toRightOf="@+id/outstock_sales_boxnum"
        />
    <TextView
        android:layout_marginTop="3sp"
        android:id="@+id/outstock_sales_reviewsan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        app:layout_constraintTop_toBottomOf="@+id/sales_outstock_reviewbarcode"
        app:layout_constraintLeft_toRightOf="@+id/outstock_sales_shelf_name"
        />
    //最后的间隙
    <TextView
        android:layout_height="@dimen/sp_7"
        android:layout_width="match_parent"
        android:id="@+id/sales_outstock_line2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/outstock_sales_reviewsan"
        />

    <ListView
        android:id="@+id/out_stock_sales_review_ListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8sp"
        android:layout_marginTop="8sp"
        android:layout_marginRight="8sp"
        android:saveEnabled="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/untie_carton_list_edit_text_background"
        app:layout_constraintVertical_bias="1.0"></ListView>

    <Button
        android:id="@+id/outstock_sales_button_reviewsubmit"
        android:layout_width="0dp"
        android:layout_height="0sp"
        android:layout_margin="4dp"
        android:background="@drawable/bt_selector"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/out_stock_sales_review_ListView" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20sp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="107sp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_middle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.27"/>

</androidx.constraintlayout.widget.ConstraintLayout>