<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/packing_list_packing_no_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:textColor="@color/lime"
            android:maxLines="2"
            android:textSize="20sp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
        <TextView
            android:id="@+id/item_packing_list_material_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="3dp"
            android:textColor="@color/blue"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/item_packing_list_batch_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="3dp"
            android:textColor="@color/red"
            android:textSize="16sp"/>
</LinearLayout>

        <TextView
            android:id="@+id/item_packing_list_material_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:textColor="@color/lime"
            android:maxLines="2"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/item_packing_list_qty"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:textColor="@color/lime"
            android:maxLines="2"
            android:textSize="20sp"/>

</LinearLayout>
