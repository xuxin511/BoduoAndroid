<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:gravity="left"
            android:id="@+id/inventory_txt_one_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5sp"
            android:layout_weight="0.7"
            android:textColor="@color/blue"
            android:textSize="@dimen/activity_list_text_first" />


        <TextView
            android:gravity="right"
            android:id="@+id/inventory_txt_one_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5sp"
            android:layout_marginLeft="1sp"
            android:layout_weight="0.43"
            android:maxLines="1"
            android:textColor="@color/red"
            android:textSize="@dimen/activity_list_text_first" />
    </LinearLayout>



    <TextView
        android:id="@+id/inventory_txt_two_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/activity_list_text_size_third"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inventory_txt_two_center">

        <TextView
            android:layout_margin="3dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/inventory_txt_three_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:maxLines="2"
            android:textColor="@color/peru"
            android:textSize="@dimen/activity_list_text_size_third" />

        <TextView
            android:id="@+id/txt_batch_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="0.4"
            android:maxLines="2"
            android:textColor="@color/peru"
            android:textSize="@dimen/activity_list_text_size_third" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>