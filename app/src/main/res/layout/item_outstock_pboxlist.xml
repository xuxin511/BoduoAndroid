<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1.2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:gravity="left"
        android:id="@+id/outstock_pboxlist_yi"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="0.5sp"
        android:layout_weight="0.7"
        android:textColor="@color/blue"
        android:textSize="@dimen/activity_list_text_first" />

    <TextView
        android:gravity="right"
        android:id="@+id/outstock_pboxlist_yi_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="0.5sp"
        android:layout_marginLeft="1sp"
        android:layout_weight="0.43"
        android:maxLines="1"
        android:textColor="@color/red"
        android:textSize="@dimen/activity_list_text_first" />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/linearLayout1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1.2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout"
     >
    <TextView
        android:gravity="left"
        android:id="@+id/outstock_pboxlist_er"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="0.5sp"
        android:layout_weight="0.7"
        android:textColor="@color/blue"
        android:textSize="@dimen/activity_list_text_first" />
  <TextView
      android:gravity="right"
      android:id="@+id/outstock_pboxlist_er_right"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_margin="0.5sp"
      android:layout_marginLeft="1sp"
      android:layout_weight="0.43"
      android:maxLines="1"
      android:textColor="@color/red"
      android:textSize="@dimen/activity_list_text_first" />


  </LinearLayout>
  <TextView
      android:id="@+id/outstock_pboxlist_san"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="3dp"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_weight="1"
      android:maxLines="2"
      android:textColor="@color/black"
      android:textSize="@dimen/activity_list_text_size_third"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout1" />
  <LinearLayout
      android:id="@+id/linearLayout2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/outstock_pboxlist_san">
    <TextView
        android:layout_margin="1dp"
        android:id="@+id/outstock_pboxlist_si"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:maxLines="2"
        android:textColor="@color/peru"
        android:textSize="@dimen/activity_list_text_size_third" />

  </LinearLayout>
  <TextView
      android:id="@+id/outstock_pboxlist_wu"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="3dp"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_weight="1"
      android:maxLines="2"
      android:textColor="@color/black"
      android:textSize="@dimen/activity_list_text_size_third"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


  </androidx.constraintlayout.widget.ConstraintLayout>