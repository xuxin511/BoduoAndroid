<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtTaskNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:maxLines="1"
            android:textColor="@color/blueviolet"
            android:textSize="@dimen/activity_list_text_first" />

        <TextView
            android:gravity="center"
            android:id="@+id/txt_department"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:maxLines="1"
            android:textColor="@color/blueviolet"
            android:textSize="@dimen/activity_list_text_size_third" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:visibility="gone">


        <TextView
            android:id="@+id/txtERPVoucherNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:maxLines="1"
            android:textColor="@color/mediumseagreen"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/txtStrongHoldName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@color/mediumseagreen"
            android:textSize="@dimen/activity_list_text_size_third" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/txtCompany"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:maxLines="1"
            android:textColor="@color/peru"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_Supplier_Name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:maxLines="1"
            android:textColor="@color/peru"
            android:textSize="@dimen/activity_list_text_size_third" />

    </LinearLayout>



</LinearLayout>