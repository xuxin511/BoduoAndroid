<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3">

        <TextView
            android:id="@+id/txt_material_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_batch_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_material_desc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:maxLines="2"
        android:textColor="@color/peru"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_weight="1"
        android:visibility="visible">

        <TextView
            android:id="@+id/txt_voucher_qty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:textColor="@color/mediumpurple"
            android:textSize="13sp" />


        <TextView
            android:visibility="visible"
            android:id="@+id/txtRemainQty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:textColor="@color/mediumpurple"
            android:textSize="13sp" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/txtScanNum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
