<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

                <TextView

                    android:id="@+id/txtTaskNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:maxLines="1"
                    android:textColor="@color/blueviolet"
                    android:textSize="@dimen/activity_list_text_first" />

                <TextView
                    android:id="@+id/txtStrVoucherType"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:textColor="@color/dodgerblue"
                    android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

                <TextView
                    android:id="@+id/txtERPVoucherNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@color/mediumseagreen"
                    android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
                <TextView
                    android:id="@+id/txtCompany"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:textColor="@color/peru"
                    android:textSize="15sp"/>


                <TextView
                    android:textColor="@color/mediumseagreen"
                    android:id="@+id/txtdepartment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textSize="@dimen/activity_list_text_size_third"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:text="供："
                    android:textColor="@color/turquoise"
                    android:textSize="15sp" />

                <TextView
                    android:textColor="@color/peru"

                    android:id="@+id/txtSupplierCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:maxLines="1"
                    android:textSize="@dimen/activity_list_text_size_third"/>

                <TextView
                    android:id="@+id/txtSupplier"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"/>

        </LinearLayout>

</LinearLayout>